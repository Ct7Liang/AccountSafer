<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ct7liang.accountsafer.activity.AddAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <ImageView
            android:src="@mipmap/default_password"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toumingColor">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入标签(标签不可重复, 必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toumingColor">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入账号(必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toumingColor">
            <EditText
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入密码(必填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toumingColor">
            <EditText
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="请输入备注(选填)"
                android:textSize="14sp"
                android:textColorHint="#FFFFFF"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:id="@+id/commit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toumingColor"
            android:text="录入"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
