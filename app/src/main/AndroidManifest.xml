<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ct7liang.accountsafer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SettingEntryPasswordActivity" />
        <activity android:name=".activity.SettingQueryPasswordActivity" />
        <activity android:name=".activity.UpdateLoginPwActivity" />
        <activity android:name=".activity.UpdateQueryPwActivity" />
        <activity android:name=".activity.AddAccountActivity" />
        <activity android:name=".activity.AccountDetailActivity" />
        <activity android:name=".activity.EditAccountActivity" />
        <activity android:name=".activity.DataBackUpActivity"></activity>
    </application>

</manifest>